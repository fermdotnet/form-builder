{
  "name": "@ferdotnet/form-builder",
  "version": "0.0.0-development",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fermdotnet/form-builder.git"
  },
  "author": "Fernando Munoz <munioz.fernando@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "yarn build:esm && yarn build:cjs && yarn styles",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "commit": "git-cz",
    "commit-all": "git add --all && git-cz && git push",
    "styles": "ncp src/styles.scss lib/styles.scss && ncp src/basicInputs/styles.scss lib/basicInputs.scss && node-sass lib -o lib",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "semantic-release": "semantic-release --branches main"
  },
  "peerDependencies": {
    "@ferdotnet/use-debounce": "^0.0.2",
    "classnames": "^2.3.2",
    "joi": "^17.9.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@ferdotnet/use-debounce": "^0.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "classnames": "^2.3.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "joi": "^17.9.2",
    "ncp": "^2.0.0",
    "node-sass": "^9.0.0",
    "prettier": "3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "typescript": "*",
    "vite": "^4.4.4"
  },
  "files": [
    "/lib"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
