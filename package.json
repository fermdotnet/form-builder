{
  "name": "@ferdotnet/form-builder",
  "version": "0.0.0-development",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "repository": "git@github.com:fermdotnet/form-builder.git",
  "author": "Fernando Munoz <munioz.fernando@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs && yarn styles",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "styles": "ncp src/styles.scss lib/styles.scss && ncp src/basicInputs/styles.scss lib/basicInputs.scss && node-sass lib -o lib",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "semantic-release": "semantic-release --branches main"
  },
  "peerDependencies": {
    "@ferdotnet/use-debounce": "^0.0.2",
    "classnames": "^2.3.2",
    "joi": "^17.9.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@ferdotnet/use-debounce": "^0.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.14",
    "classnames": "^2.3.2",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "joi": "^17.9.2",
    "ncp": "^2.0.0",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "typescript": "^4.6.2"
  },
  "files": [
    "/lib"
  ]
}
